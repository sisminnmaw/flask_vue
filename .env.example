# Flask application settings
FLASK_APP=run.py
FLASK_ENV=development  # development, testing, or production
SECRET_KEY=your-secret-key-here

# Database connection
DATABASE_URL=mysql+pymysql://user:password@localhost/flask_vue
DEV_DATABASE_URL=mysql+pymysql://user:password@localhost/flask_vue_dev
TEST_DATABASE_URL=mysql+pymysql://user:password@localhost/flask_vue_test
PROD_DATABASE_URL=mysql+pymysql://user:password@localhost/flask_vue_prod

# Logging settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Email settings for batch alerts
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alert@example.com
SMTP_PASSWORD=your-smtp-password
SENDER_EMAIL=alert@example.com 